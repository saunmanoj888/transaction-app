<p id="notice"><%= notice %></p>

<h1>Beneficiaries</h1>

<table>
  <thead>
    <tr>
      <th>Account number</th>
      <th>Nick name</th>
      <th>Ifsc code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beneficiaries.each do |beneficiary| %>
      <tr>
        <td><%= beneficiary.account_number %></td>
        <td><%= beneficiary.nick_name %></td>
        <td><%= beneficiary.ifsc_code %></td>
        <td><%= beneficiary.user_id %></td>
        <td><%= link_to 'Show', beneficiary %></td>
        <td><%= link_to 'Edit', edit_beneficiary_path(beneficiary) %></td>
        <td><%= link_to 'Destroy', beneficiary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

